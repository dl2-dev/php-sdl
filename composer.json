{
  "name": "dl2/sdl",
  "description": "Collection of common and useful assets",
  "version": "3.0.0",
  "license": "Unlicense",
  "require": {
    "php": "^8"
  },
  "require-dev": {
    "ext-bcmath": "*",
    "ext-mbstring": "*",
    "ext-xml": "*",
    "ergebnis/composer-normalize": "*",
    "friendsofphp/php-cs-fixer": "*",
    "phpunit/phpunit": "*",
    "squizlabs/php_codesniffer": "*",
    "vimeo/psalm": "dev-master"
  },
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "DL2\\SDL\\": "src"
    },
    "files": [
      "src/bootstrap.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "DL2\\SDL\\Tests\\": "tests"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "npm i --loglevel error"
    ],
    "post-update-cmd": [
      "@post-install-cmd",
      "npm rebuild"
    ],
    "format": [
      "@php-cs-fixer",
      "@phpcbf"
    ],
    "lint": [
      "@phpcs -snq",
      "@psalm"
    ],
    "php-cs-fixer": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix --config=.php-cs-fixer.dist.php -v",
    "phpcbf": "phpcbf -sn",
    "phpcs": "phpcs",
    "phpunit": "XDEBUG_MODE=coverage phpdbg -qrr -dzend.assertions=1 -dassert.exception=1 vendor/bin/phpunit",
    "psalm": "psalm --no-cache --no-progress --output-format=compact",
    "psalter": "psalter --no-cache --issues=all",
    "test": [
      "@lint",
      "@phpunit"
    ]
  },
  "suggests": {
    "ext-bcmath": "required by the 'Number' class"
  }
}
